#:kivy 2.2.1
#:set s dp(150)

<CanvasExamplesTabs@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text: "Canvas1"
        CanvasExample1:
    TabbedPanelItem:
        text: "Canvas2"
        CanvasExample2:
    TabbedPanelItem:
        text: "Canvas3"
        CanvasExample3:
    TabbedPanelItem:
        text: "Canvas4"
        CanvasExample4:
    TabbedPanelItem:
        text: "Canvas5"
        CanvasExample5:
    TabbedPanelItem:
        text: "Canvas6"
        CanvasExample6:
    

<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Ellipse:
            pos: self.center_x-s*2, self.center_y+s
            size: s, s/2
        Line:
            points: (0, 0, self.width/4, 100, self.width/2, 0, self.width*3/4, 100, self.width, 0)
            width: 2

<CanvasExample2>:
    canvas:
        Line:
            points: (self.width/2, 0, self.width/2, self.height)
        Line:
            points: (0, self.height/2, self.width, self.height/2)

<CanvasExample3>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Line:
            circle: (200, 200, 100)
            width: 2
        Line:
            ellipse: (500, 300, s, s/2)
            width: 4
        Color:
            rgb: 0, 1, 0
        Line:
            rectangle: (self.center_x-s/2, s, s, 200)
            width: 3

<CanvasExample4>:
    Button:
        pos: 100, 400
        text: "A"
        on_press: root.on_button_a_click()
        
<CanvasExample6>:
    RelativeLayout:
        canvas:
            Color:
                rgb: 0, 0, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 0, 0
            Rectangle:
                size: self.size
    